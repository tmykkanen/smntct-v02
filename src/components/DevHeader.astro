---
import { Icon } from 'astro-icon/components';
import Hamburger from './Hamburger.astro';

const currentPath = Astro.url.pathname;
---

<!-- <header id='page-header' class='navbar bg-neutral fixed top-0 bottom-auto z-50'> -->
<header id='page-header' class:list={['navbar bg-neutral fixed top-0 bottom-auto z-50']}>
	<div id='logo-btn' class:list={['navbar-start']}>
		<a href='/' class='btn btn-ghost text-primary text-xl'>
			Southern MN TCT
			<Icon name='tct_logo' class='text-primary text-4xl' />
		</a>
	</div>
	<div class='navbar-end'>
		<Hamburger />
	</div>
</header>

